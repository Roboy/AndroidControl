<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewMotorID"
        android:layout_margin="10dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarPosition"
        android:layout_alignTop="@+id/textViewMotorID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textViewMotorID"
        android:layout_toRightOf="@+id/textViewMotorID"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value"
        android:id="@+id/textViewCurrentPosition"
        android:layout_alignTop="@+id/seekBarPosition"
        android:layout_alignLeft="@+id/textViewMotorID"
        android:layout_alignStart="@+id/textViewMotorID"
        android:layout_marginTop="10dp" />

</RelativeLayout>